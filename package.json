{
  "name": "wcp-ai-agent",
  "version": "0.1.0",
  "description": "WCP AI Agent Prototype using TypeScript with Mastra.ai",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "postinstall": "node -e \"if (process.env.NODE_ENV !== 'production' && !require('fs').existsSync('.env')) { console.log('\\n⚠️  Environment not configured. Run: npm run setup\\n'); }\"",
    "dev": "mastra dev",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); if (fs.existsSync('dist')) fs.rmSync('dist', { recursive: true, force: true });\"",
    "build": "npm run clean && tsc && tsc -p tsconfig.showcase.json",
    "build:src": "tsc",
    "build:showcase": "tsc -p tsconfig.showcase.json",
    "start": "node dist/index.js",
    "serve": "node dist/server.js",
    "test": "npm run build && node dist/index.js",
    "test:jest": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:all": "ts-node utils/run-tests.ts",
    "test:unit": "ts-node utils/run-tests.ts --unit",
    "test:integration": "ts-node utils/run-tests.ts --integration",
    "test:system": "ts-node utils/run-tests.ts --system",
    "test:workflow": "ts-node utils/run-tests.ts --workflow",
    "test:coverage": "ts-node utils/run-tests.ts --coverage",
    "showcase": "ts-node --esm showcase/scripts/showcase.ts",
    "validate": "ts-node utils/validate-scaffold.ts",
    "scaffold": "ts-node utils/scaffold-new-feature.ts",
    "dev:utils": "npm run test:all -- --watch"
  },
  "keywords": [
    "mastra",
    "ai-agent",
    "wcp",
    "compliance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.65",
    "@hono/node-server": "^1.19.7",
    "@mastra/core": "^0.24.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "hono": "^4.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "pdf-parse": "^1.1.1"
  },
  "overrides": {
    "ai": "^4.3.19"
  }
}
